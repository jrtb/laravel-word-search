						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-CSRF-TOKEN",
								"value": "{{csrf_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"query\": \"example\",\n    \"list\": \"both\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/search",
							"host": ["{{baseUrl}}"],
							"path": ["search"]
