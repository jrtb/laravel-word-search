		"name": "Word Search API",
		"description": "API collection for the Laravel Word Search application. This collection includes endpoints for pattern search, frequency search, longest word tracking, and session/streak tracking. Player identity is maintained across sessions using browser fingerprinting based on User-Agent, Accept-Language headers, and IP address. Sessions are maintained for 24 hours from last activity.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Internal APIs",
			"description": "APIs for internal website use only. Protected by CSRF tokens.",
			"item": [
				{
					"name": "Pattern Search",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-CSRF-TOKEN",
								"value": "{{csrf_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"query\": \"example\",\n    \"list\": \"both\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/search",
							"host": ["{{baseUrl}}"],
							"path": ["search"]
						},
						"description": "Search through word lists using pattern matching."
					}
				},
				{
					"name": "Frequency Search",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-CSRF-TOKEN",
								"value": "{{csrf_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"frequency\": 0.0000009\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/search-frequency",
							"host": ["{{baseUrl}}"],
							"path": ["search-frequency"]
						},
						"description": "Search for words based on their frequency of usage."
					}
				}
			]
		},
		{
			"name": "External APIs",
			"description": "Public APIs for longest word tracking and session management. No CSRF token required. Player identity is maintained across sessions using browser fingerprinting. Sessions remain active for 24 hours from last activity.",
